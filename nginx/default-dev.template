upstream frontend {
  server <FRONTEND_DEV_HOST>:<FRONTEND_PORT>;
}
upstream frontend-dev-reload {
  server <FRONTEND_DEV_HOST>:35729;
}
upstream elasticsearch {
  server <ES_HOST>:<ES_PORT>;
}
upstream backend {
  server <BACKEND_HOST>:<BACKEND_PORT>;
}

upstream kibana {
  server <KIBANA_HOST>:<KIBANA_PORT>;
}

server {
    listen 80;
    listen 35729;
    server_name  localhost;

    location /kibana/ {
      auth_basic "Administrator Area (user1, psw)";
      auth_basic_user_file /etc/nginx/conf.d/.htpasswd;
      proxy_pass http://kibana/;
    }

    location / {
        proxy_pass http://frontend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
    }


    location /api {
        proxy_pass http://backend/;
    }

    location /elasticsearch/ {
        proxy_pass http://elasticsearch/;
        proxy_redirect off;
        proxy_buffering off;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        break;
    }

    location ~ "/livereload.*" {
    	proxy_pass http://frontend-dev-reload;
      # Allow protocol upgrade to websocket
      proxy_http_version 1.1;
      proxy_next_upstream off;
      proxy_set_header Host $http_host;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection "upgrade";
    }



    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }
}
