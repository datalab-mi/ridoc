{
  "settings": {
    "analysis": {
      "char_filter": {
        "quotes": {
          "type": "mapping",
          "mappings": [
            "\\u0091=>\\u0027",
            "\\u0092=>\\u0027",
            "\\u2018=>\\u0027",
            "\\u2019=>\\u0027",
            "\\u201B=>\\u0027"
          ]
        },
        "new_line": {
          "type": "mapping",
          "mappings": ["\\u002d\\u0020=>"]
        }
      },
      "filter" : {
        "french_elision": {
          "type":         "elision",
          "articles_case": true,
          "articles": [
              "l", "m", "t", "qu", "n", "s",
              "j", "d", "c", "jusqu", "quoiqu",
              "lorsqu", "puisqu"
            ]
        },
        "french_stop": {
          "type":       "stop",
          "stopwords":  "_french_"
        },
        "more_stop": {
          "type": "stop",
          "ignore_case": true,
          "stopwords": [ "a", "Ã "]
        },
        "minimal_stemmer": {
          "type" : "stemmer",
          "name" : "french"
        },
        "acronym": {
          "type": "synonym"
        },
        "light_acronym": {
          "type": "synonym"
        },
        "expression": {
          "type":   "synonym"
        },
        "synonym": {
          "type": "synonym"
        },
        "search_synonym": {
          "type": "synonym"
        },
        "my_multiplexer" : {
          "type" : "multiplexer",
          "filters" : ["search_synonym, remove_artifact"],
          "preserve_original": true
        },
        "remove_artifact" : {
          "type": "pattern_replace",
          "pattern": "_(.*)_",
          "replacement" : "$1"
        },
        "my_beider_morse": {
          "type": "phonetic",
          "encoder": "beider_morse",
          "replace": false,
          "languageset": "french"
        },
          "shingle": {
          "type": "shingle",
          "min_shingle_size": 2,
          "max_shingle_size": 3
        }
      },
      "analyzer": {
        "my_analyzer": {
          "type":"custom",
          "char_filter": [ "quotes","new_line","html_strip"],
          "tokenizer": "icu_tokenizer",
          "filter": [
            "lowercase",
            "french_elision",
            "icu_folding",
            "french_stop",
            "more_stop",
            "minimal_stemmer",
            "synonym",
            "remove_artifact"
            ]
        },
        "my_search_analyzer": {
          "type":"custom",
          "char_filter": [ "quotes","new_line","html_strip"],
          "tokenizer": "icu_tokenizer",
          "filter": [
            "lowercase",
            "french_elision",
            "icu_folding",
            "french_stop",
            "more_stop",
            "minimal_stemmer",
            "my_multiplexer"
            ]
        },
        "phonetic_analyser": {
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "my_beider_morse"
          ]
        },
        "trigram": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase","shingle"]
          },
        "reverse": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase","reverse"]
        },
        "clean_analyser": {
          "tokenizer": "icu_tokenizer",
          "filter": [
            "lowercase",
            "french_elision",
            "icu_folding",
            "french_stop",
            "more_stop"
          ]
        }
      },
      "normalizer": {
        "clean_normalizer": {
          "type": "custom",
          "filter": [
            "lowercase",
            "french_elision",
            "icu_folding"
          ]
        }
      }
    },
    "index": {
      "blocks": {
        "read_only_allow_delete": "false"
      }
    }
  },
  "mappings":{
    "properties": {
       "content": {
          "type": "text",
          "analyzer" : "my_analyzer",
          "search_analyzer" : "my_search_analyzer",
          "fields" :{
            "trigram": {
              "type": "text",
              "analyzer": "trigram"
            },
            "reverse": {
              "type": "text",
              "analyzer": "reverse"
            },
            "tag": {
              "type": "keyword",
              "ignore_above": 10000,
              "normalizer": "clean_normalizer"
            }
          }
        },
        "author": {
          "type": "text" ,
          "analyzer" : "phonetic_analyser",
          "search_analyzer" : "phonetic_analyser"
        },
        "title": {
            "type": "text" ,
            "analyzer" : "my_analyzer",
            "search_analyzer" : "my_search_analyzer"
        },
        "date": {
          "type": "date",
          "format": "yyyy-MM-dd"
        },
        "tag":{
          "type": "keyword",
          "normalizer": "clean_normalizer"
        },
        "tag_textrank":{
          "type": "keyword",
          "normalizer": "clean_normalizer"
        }
      }
  }
}
